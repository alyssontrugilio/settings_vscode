{
  "http.proxyAuthorization": null,
  // * VSCode UI settings
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.labelFormat": "short",
  "extensions.ignoreRecommendations": true,
  // * Editor configurations
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.rulers": [
    90
  ],
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  // * Flutter/Dart settings
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "dart-lang.dart-code",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    },
    "dart.flutterSdkPath": "/path/to/flutter", // Altere conforme necess√°rio
    "dart.enableSdkFormatter": true,
    "dart.analysisExcludedFolders": [
      "**/.dart_tool/**",
      "**/build/**"
    ]
  },
  // * React, JS, TS, Next.js settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  // * Emmet
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  // * Prettier settings
  "prettier.printWidth": 100,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  // * ESLint settings
  "eslint.packageManager": "yarn",
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  // * File and Explorer settings
  "files.autoSave": "off",
  "files.exclude": {
    "node_modules": true,
    ".dart_tool": true,
    "build": true
  },
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  // * Terminal settings
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  // * Extra UI settings
  "window.titleBarStyle": "native",
  "breadcrumbs.enabled": true,
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 1,
  // * Color preview for multiple languages
  "colorize.languages": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "json",
    "html",
    "css",
    "dart"
  ],
  "editor.codeLensFontFamily": "Fira Code",
}
