{
  // üñãÔ∏è Fonte e Estilo do Editor
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "editor.tabSize": 2,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontWeight": "600",

  // ‚ö° Performance e Experi√™ncia
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.renderLineHighlight": "none",
  "editor.hideCursorInOverviewRuler": true,
  "editor.semanticHighlighting.enabled": false,

  // üé® Formata√ß√£o e C√≥digo
  "editor.formatOnSave": true,
  "editor.suggestSelection": "first",
  "editor.parameterHints.enabled": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "prettier.bracketSameLine": true,

  // üîπ Formatadores para JS/TS/React
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // üîπ Formata√ß√£o para CSS, SCSS e LESS
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "html.format.enable": true,

  // üîπ Configura√ß√µes do Prettier
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.arrowParens": "always",
  "prettier.bracketSpacing": true,
  "prettier.printWidth": 100,

  // üìÇ Explorer e Organiza√ß√£o de Arquivos
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json",
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml",
    "*.dart": "${capture}.g.dart,${capture}.freezed.dart"
  },
  "explorer.sortOrder": "default",
  "explorer.compactFolders": false,
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/*.freezed.dart": true,
    "**/*.g.dart": true
  },

  // üñ•Ô∏è Terminal e Performance
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.showExitAlert": false,
  "workbench.colorTheme": "Catppuccin Macchiato",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "workbench.navigationControl.enabled": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  // Desativar reload autom√°tico ao salvar arquivos Dart
  "[dart]": {
    "editor.formatOnSave": true
  },
  "dart.flutterHotReloadOnSave": false,
  "dart.flutterHotRestartOnSave": false,
  "workbench.iconTheme": "vscode-icons"
}
