{
  "editor.guides.bracketPairs": "active",
  "editor.formatOnSave": true,
  "dart.checkForSdkUpdates": false,
  "dart.flutterHotReloadOnSave": "never",
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": false,
  "redhat.telemetry.enabled": false,
  "debug.toolBarLocation": "commandCenter",
  "workbench.startupEditor": "newUntitledFile",
  "editor.fontSize": 15,
  "editor.lineHeight": 1.8,
  "editor.rulers": [
    80,
    120
  ],
  "extensions.ignoreRecommendations": true,
  "editor.stickyScroll.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "files.associations": {
    ".env.*": "dotenv",
    ".prettierrc": "json",
    "*.css": "css",
    ".dev.vars": "dotenv"
  },
  "editor.parameterHints.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.suggestSelection": "first",
  "explorer.confirmDelete": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "terminal.integrated.showExitAlert": false,
  "editor.semanticHighlighting.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.productIconTheme": "fluent-icons",
  "editor.fontFamily": "Fira Code",
  "editor.fontWeight": "700",
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.fontWeight": "600",
  "gitlens.codeLens.authors.enabled": false,
  "editor.tabSize": 2,
  "security.workspace.trust.untrustedFiles": "newWindow",
  "files.exclude": {
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.hg": true,
    "**/.svn": true,
    ".vscode": true,
    "**/.git": true,
    "**/Thumbs.db": true,
    "**/*.freezed.dart": true,
    "**/*.g.dart": true
  },
  "explorer.compactFolders": false, // aqui maximixa quando hรก pasta dentro de pasta
  "window.titleBarStyle": "custom",
  "explorer.fileNesting.enabled": true, // agrupa arquivos semelhantes
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
      "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata,CHANGELOG.md,LICENSE,analysis_options.yaml,melos_*.iml, .puro.json",
      "*.dart": "${capture}.g.dart,${capture}.freezed.dart",
      "{{environment}}_variables.json": "*_variables.json"
  },
  "git.autofetch": true,
  "[yaml]": {
      "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "workbench.iconTheme": "symbols",
  "update.mode": "default",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.defaultProfile.osx": "fish",
  "editor.defaultFormatter": "Dart-Code.dart-code",
  "window.commandCenter": false,
  "git.openRepositoryInParentFolders": "always",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "git.enableSmartCommit": true,
  "editor.accessibilitySupport": "off",
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "workbench.editor.labelFormat": "short",
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "explorer.sortOrder": "foldersNestsFiles",
  "workbench.statusBar.visible": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": []
  },
  "workbench.layoutControl.enabled": false,
  "workbench.colorTheme": "Catppuccin Macchiato",
  "symbols.hidesExplorerArrows": false,
  "workbench.activityBar.location": "top",
  "window.customTitleBarVisibility": "auto"
}
